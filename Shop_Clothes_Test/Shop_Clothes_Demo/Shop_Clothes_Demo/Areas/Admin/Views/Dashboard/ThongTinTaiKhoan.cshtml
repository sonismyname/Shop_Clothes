@model Shop_Clothes_Demo.Models.ThanhVien

@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Thông Tin Tài Khoản</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tài Khoản:
        </dt>

        <dd>
            <input type="text" name="TaiKhoan" class="form-control" value="@Model.TaiKhoan" readonly>
        </dd>

        <dt>
            <br />
            Họ tên:
        </dt>

        <dd>
            <br />
            <input type="text" name="HoTen" class="form-control" value="@Model.HoTen" readonly>
        </dd>

        <dt>
            <br />
            Số điện thoại:
        </dt>

        <dd>
            <br />
            <input type="text" name="SoDienThoai" class="form-control" value="@Model.SoDienThoai" readonly>
        </dd>

        <dt>
            <br />
            Địa chỉ:
        </dt>

        <dd>
            <br />
            <input type="text" name="DiaChi" class="form-control" value="@Model.DiaChi" readonly>
        </dd>
        <dt>
            <br />
            Email:
        </dt>

        <dd>
            <br />
            <input type="text" name="Email" class="form-control" value="@Model.Email" readonly>
        </dd>

        <dt>
            <br />
            Loại thành viên:
        </dt>

        <dd>
            <br/>
            <input type="text" name="ltv" class="form-control" value="Quản Lý" / readonly>
        </dd>

        <dt>
            
        </dt>

        <dd>
            <br/><br/>
            @Html.ActionLink("Đổi Mật Khẩu", "DoiMatKhau", new { }, new { @class = "btn btn-success" })       @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-default" })     @Html.ActionLink("Đăng Xuất", "SignOut", null, new { @class = "btn btn-danger" })
        </dd>
    </dl>
</div>
