@using Shop_Clothes_Demo.Models
@model IEnumerable<SanPham>



<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
        <li class="active"><a href="@Url.Action("Index", "Intro")">Trang chủ <span class="sr-only">(current)</span></a></li>
        @foreach (var groupItem in Model.GroupBy(n => n.NhomMua))
        {
            if (groupItem.Key != null)
            {
                <li class="dropdown">

                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@groupItem.Key.TenNhom<span class="caret"></span></a>
                    <ul class="dropdown-menu animated swing">
                        @foreach (var item in groupItem.GroupBy(n => n.LoaiSanPham))
                        {
                            if (item.Key != null)
                            {
                                <li><a href="@Url.Action("SanPham", "SanPham", new { @MaNhom = groupItem.Key.MaNhom , @MaLoaiSanPham = item.Key.MaLoaiSanPham })">@item.Key.TenLoaiSanPham</a></li>
                            }
                        }
                    </ul>

                </li>
            }
        }
        <li><a href="~/Blog/Index">Thông tin <span class="sr-only">(current)</span></a></li>
        <li><a href="~/Blog/Bloger">Blog<span class="sr-only">(current)</span></a></li>
        <li><a href="~/Blog/Contact">Liên hệ<span class="sr-only">(current)</span></a></li>
    </ul>
</div>

