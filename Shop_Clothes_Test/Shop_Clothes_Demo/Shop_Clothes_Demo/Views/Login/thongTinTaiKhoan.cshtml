<div class="payment-info">
    <h3>Thông tin tài khoản</h3>

    <div class="login-tab">
        <div class="user-login">
            <h3>THÔNG TIN CÁ NHÂN</h3>
            <form action="CapNhat" method="post">
                <p>Họ và tên</p>
                <input type="text" name="hoten" value="@tv.HoTen" >
                <p>Số điện thoại</p>
                <input type="text" name="sdt" value="@tv.SoDienThoai" >
                <p>Địa chỉ</p>
                <input type="text" name="diachi" value="@tv.DiaChi">
                <p>Email</p>
                <input type="text" name="email" value="@tv.Email" >
                <div class="clear"></div>
                <h3>THÔNG TIN TÀI KHOẢN</h3>
                <p>Tài khoản</p>
                <input type="text" name="taikhoan" value="@tv.TaiKhoan">
                <p>Thành viên</p>
                <input type="text" name="loaitv" value="@tv.LoaiThanhVien" >

                @*<h4 style="color:red"> @Session["thongbao"] </h4>*@
                <div class="user-grids">
                    <div class="user-left">
                    </div>
                    <div class="user-left">
                        <input type="submit" value="Cập nhật">
                    </div>
                    <div class="clear"></div>
                </div>
            </form>
        </div>
    </div>
